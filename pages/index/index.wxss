/* pages/index/index.wxss */

.cointainer {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.page-body {
  width: 100%;
  height: 100%;
  -webkit-text-fill-color: #878787;
}

.sport-data {
  flex-direction: column;
  align-items: center;
  width: 100%;
  
}

.sport-speed {
  display: flex;
  flex-direction: column;
}

.sport-time {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.sport-Text{
  
  font-size: 12px;
}

.page-text {
  text-align: center;
  font-size: 16px;
}

.sport-num {
  font-size: 40px;
  text-align: center;
  -webkit-text-fill-color: black
}

.center-line {
  margin: 20px;
}

.produce-data {
  display: inline-flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 30px;
  width: 100%;
}

.accuracy-data {
  flex-direction: column;
  margin-right: 10px;
  /* background-color: #7dcdff; */
}

.produce-Text {
  font-size: 16rpx;
  text-align: center;
}

.image-data {
  margin-bottom: 10px;
}

.text-data {
  margin-bottom: 10px;
}

.images {
  width: 50px;
  height: 50px;
}

.picker {
  
    /* background-color: #f0f0f0;   */
}

.bottom_button {
  display: inline-flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
  padding-top: 30rpx;
  padding-left: 30rpx;
  -webkit-text-fill-color: #2d3e50;
  font-family: "黑体";
  
}

.start {
  position: fixed;
  bottom: 0px;
  width: 150px;
  height: 40px;
  border: 0em #2d3e50;
  font-size: 16px;
  background-color: #90ee90;
}

.reset {
  position: fixed;
  bottom: 0px;
  width: 100px;
  height: 40px;
  font-size: 14px;
  margin-left: 330rpx;
}
