/* pages/index/index.wxss */

.cointainer {
  display: flex;
  flex-direction: column;
}

.page-body {
  margin-top: 30px;
  width: 100%;
  -webkit-text-fill-color: #878787;
}

.sport-data {
  flex-direction: column;
  align-items: center;
  width: 100%;
  font-size: 30px;
}

.sport-speed {
  display: flex;
  flex-direction: column;
}

.sport-time {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.page-text {
  text-align: center;
  font-size: 16px;
}

.speed-num {
  text-align: center;
}

.time-num {
  text-align: center;
}

.center-line {
  margin: 40px;
  color: #f0f0f0;
}

.produce-data {
  display: inline-flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  height: 40%;
}

.accuracy-data {
  flex-direction: column;
  margin-right: 10px;
  /* background-color: #7dcdff; */
}

.image-data {
  margin-bottom: 10px;
}

.text-data {
  margin-bottom: 10px;
}

.images {
  width: 50px;
  height: 50px;
}

.picker {
  background-color: #f0f0f0;
}

.bottom_button {
  display: inline-flex;
  flex-direction: row;
  padding-top: 30rpx;
  padding-left: 30rpx;
  font-size: 14px;
}

.start {
  margin-left: 30rpx;
}

.reset {
  margin-left: 30rpx;
}
