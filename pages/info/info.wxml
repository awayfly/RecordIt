<view class="page">
    <view class="page__hd">
       <view class='info-container'>信息修改</view>
    </view>
    <view class="page__bd">
        <view class="weui-cells__title">表单</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">身高(cm)</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput='height' placeholder="请输入身高" value='{{height}}'/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">体重(kg)</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput='weight' placeholder="请输入体重" value='{{weight}}'/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">年龄</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput='age' placeholder="请输入年龄" value='{{age}}'/>
                </view>
            </view>
            <view class="weui-cell weui-cell_select">
              <view class="weui-cell__hd weui-cell__hd_in-select-after">
                <view class="weui-label">性别</view>
              </view>
              <view class="weui-cell__bd">
                <picker bindchange="sex" value="{{sexIndex}}" range="{{sex}}">
                  <view class="weui-select" >{{sex[sexIndex]}}</view>
                </picker>
              </view>
            </view>
        </view>
        <button type="primary" class='buttonLogin weui-btn' disabled='{{!(heightChange||weightChange||ageChange||sexChange)}}' bindtap='submitUserInfo'>提交修改</button>
        <view class="weui-cells__tips">请如实填写哦~</view>
    </view>
</view>