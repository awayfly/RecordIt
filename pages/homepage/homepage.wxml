<view class="page">
    <view class="page__hd">
        <!--index.wxml-->
        
        <view class="user-container">
          <view class='userinfo'>
            
          </view>
          <view class="userinfo" style='ba'>
            <open-data type="userAvatarUrl" class='open-data'></open-data>
            <button wx:if="{{!hasUserInfo && canIUse}}" type="primary" open-type="getUserInfo" bindgetuserinfo="getUserInfo" class='buttonLogin weui-btn'>同步数据</button>
            <block wx:else>
              <view class="userinfo-nickname">{{userInfo.nickName}}</view>
            </block>
          </view>
          <view class='userinfo'></view>
        </view>
    </view>
    <view class="page__bd">
        <view class="weui-cells__title">带跳转的列表项</view>
        <view class="weui-cells weui-cells_after-title">
            <navigator url="../info/info" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">身体信息</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
        </view>
    </view>
</view>